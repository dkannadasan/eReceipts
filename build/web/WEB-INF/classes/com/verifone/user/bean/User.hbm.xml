<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.verifone.model.User" table="user" lazy="false" >
	 <id name="userId" column="id" type="java.lang.Integer">
		 <generator class="native"/>
	 </id>
	 <property name="firstName" column="first_name" type="java.lang.String" />
	 <property name="lastName" column="last_name" type="java.lang.String" />
	 <property name="company" column="company" type="java.lang.String" />
	 <property name="comments" column="comments" type="java.lang.String" />
         <property name="emailId" column="emailId" type="java.lang.String" />
	 <property name="mobile" column="mobile" type="java.math.BigInteger" />
         <property name="registered" column="registered" type="java.lang.Boolean" />
 </class>
</hibernate-mapping>
